@model cours1test.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    @{
        ViewData["Title"] = Model.UserName;
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="~/js/animation.js"></script>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="/css/all.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>

    <h3>Работы автора <i>@Model.UserName</i></h3>

    @if (Model.Fanfics.Count > 0)
    {
        <div class="fanfics">
            @foreach (var fanfic in Model.Fanfics)
            {
                <div class="fanfic-name-link">
                    <h2>
                        <a class="font-weight-bold fanfic-name-link-a" asp-action="Readfic" asp-controller="Fanfiction" asp-route-id="@fanfic.ID">@fanfic.Title</a>
                    </h2>
                    <div>
                        <div class="likes-count"><p><i class="far fa-thumbs-up"></i> @fanfic.Likes.Count()</p></div>
                        <div class="comments-count"><p><i class="far fa-comment-alt"></i> @fanfic.Comments.Count()</p></div>

                    </div>
                    <h4><b>Описание:</b></h4>
                    <hr />
                    <div class="fanfic-description">
                        <p>@fanfic.Description</p>
                    </div>
                </div>

            }
        </div>
     }
     else
     {
        <h4>Не существует фанфиков у автора "@Model.UserName"</h4>
     }

        

    </body>
</html>