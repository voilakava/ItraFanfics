@model IEnumerable<cours1test.Models.Category>

<h2 class="text-light">Список ролей</h2>
<table class="table table-striped table-light">
    @foreach (var category in Model)
    {
    <tr>
        <td>@category.Name</td>
        <td>
            <form asp-action="OpenFics" asp-route-id="@category.ID" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Открыть Фанфики
                </button>
            </form>
        </td>
        <td>
            <form asp-action="Delete" asp-route-id="@category.ID" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                    Удалить
                </button>
            </form>
        </td>
    </tr>
    }
</table>
<a class="text-light" asp-action="Create">Добавить роль</a> 