@model cours1test.ViewModels.LoginModel

<html>
    <head>
        <link href="~/css/login.css" rel="stylesheet"> 
    </head>
    <body>


        <div class="container px-4 py-5 mx-auto">
            <div class="card card0">
                <div class="d-flex flex-lg-row flex-column-reverse">
                    <div class="card card1">
                        <div class="row justify-content-center my-auto">
                            <div class="col-md-8 col-10 my-5">
                                <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl=" @Model.ReturnUrl ">
                                    <div class="row justify-content-center px-3 mb-3"> <img id="logo" src="https://i.imgur.com/PSXxjNY.png"> </div>
                                    <h3 class="mb-5 text-center heading">Хранилище документов</h3>
                                    <h6 class="msg-info">Войдите в свой аккаунт</h6>
                                    <div class="form-group">
                                        <label asp-for="UserName">Имя пользователя</label>
                                        <input asp-for="UserName" placeholder="Username" class="form-control">
                                        <span asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password">Пароль</label><br />
                                        <input asp-for="Password" placeholder="Password" class="form-control">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div>
                                        <label asp-for="RememberMe"> </label>
                                        <input class="check-remember" asp-for="RememberMe" />
                                    </div>
                                    <div class="row justify-content-center my-3 px-3"> <input type="submit" class="btn-block btn-color" value="Войти" /> </div>

                                </form>
                            </div>
                        </div> 
                    </div>
                    <div class="card card2">
                        <div class="my-auto mx-md-5 px-md-5 right">
                            <h3 class="text-white">Хранилище документов и книг</h3> <small class="text-white"></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

