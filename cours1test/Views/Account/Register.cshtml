@model cours1test.ViewModels.RegisterModel
<html>
<head>
    <link href="~/css/login.css" rel="stylesheet">
</head>
<body>


    <div class="container px-4 py-5 mx-auto">
        <div class="card card0">
            <div class="d-flex flex-lg-row flex-column-reverse">
                <div class="card card1">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-10 my-5">
                            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                                <div class="row justify-content-center px-3 mb-3"> <img id="logo" src="https://i.imgur.com/PSXxjNY.png"> </div>
                                <h3 class="mb-5 text-center heading">Хранилище документов</h3>
                                <h6 class="msg-info">Войдите в свой аккаунт</h6>
                                <div class="form-group">
                                    <label asp-for="Email">Введите Email</label><br />
                                    <input type="text" asp-for="Email" laceholder="Email" class="form-control" />
                                    <span asp-validation-for="Email" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserName">Введите имя пользователя</label><br />
                                    <input asp-for="UserName" laceholder="Username" class="form-control" />
                                    <span asp-validation-for="UserName" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Пароль</label><br />
                                    <input asp-for="Password" placeholder="Password" class="form-control" />
                                    <span asp-validation-for="Password" />

                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Повтор пароля</label><br />
                                    <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" />

                                </div>
                                <div class="row justify-content-center my-3 px-3"> <input type="submit" class="btn-block btn-color" value="Зарегистрироваться" /> </div>

                            </form>
                        </div>
                    </div>
                </div>
                <div class="card card2">
                    <div class="my-auto mx-md-5 px-md-5 right">
                        <h3 class="text-white">Хранилище документов и книг</h3> <small class="text-wh"></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>




