@using Microsoft.AspNetCore.Identity
@*@model cours1test.ViewModels.EditFandomModel*@
@model cours1test.Models.Fandom

<h2>Изменение для фандома @Model.Titile</h2>

<form asp-action="edit" asp-controller="Fandom" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Titile" class="control-label">Имя</label>
        <input type="text" asp-for="Titile" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label">Возраст</label>
        <input type="number" asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
